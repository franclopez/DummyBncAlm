<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:cdv = "http://cordova.apache.org/ns/1.0"
        id        = "co.com.tcs.bancolombia.bancaalamano"
        version   = "0.0.1">
    
    <name>Ahorro a la Mano</name>
    
    <description>
       Bancolombia Ahorro a la Mano 
    </description>
    
    <author email="hi@ionicframework" href="http://ionicframework.com/">
        Ionic Framework Team
    </author>
    
    <content src="index.html" />
    <access origin="*"/> 
    
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="10000" />
    
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackupWebStorage" value="none"/>
    
    <!-- Icono android -->
    <icon src="img/icono.png"/>
    <icon src="img/ic_ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="img/ic_mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="img/ic_hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="img/icono.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="img/ic_ldpi.png" cdv:platform="android" cdv:density="ldpi" />
    <icon src="img/ic_mdpi.png" cdv:platform="android" cdv:density="mdpi" />
    <icon src="img/ic_hdpi.png" cdv:platform="android" cdv:density="hdpi" />
    <icon src="img/icono.png" cdv:platform="android" cdv:density="xhdpi" />
    
    <!-- Icono ios -->
    <icon src="img/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="img/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
    <icon src="img/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icon@2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="img/icon-60.png" cdv:platform="ios" width="60" height="60" />
    <icon src="img/icon-60@2x.png" cdv:platform="ios" width="120" height="120" />
    <icon src="img/icon.png" cdv:platform="ios" width="57" height="57" />
    <icon src="img/icon@2x.png" cdv:platform="ios" width="114" height="114" />
   
    <!-- Splash android -->
    <gap:splash src="img/splash_mdpi.png"/>
    <cdv:splash src="img/splash_mdpi.png"/>
    <gap:splash src="img/splash_mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="img/splash_hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <cdv:splash src="img/splash_mdpi.png" cdv:platform="android" cdv:qualifier="mdpi" />
    <cdv:splash src="img/splash_hdpi.png" cdv:platform="android" cdv:qualifier="hdpi" />
    
    <!-- Splash ios -->
    <gap:splash src="img/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/Default@2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />  
    <cdv:splash src="img/Default.png" cdv:platform="ios" width="320" height="480" />
    <cdv:splash src="img/Default@2x.png" cdv:platform="ios"  width="640" height="960" />
    <cdv:splash src="img/Default-568h@2x.png" cdv:platform="ios" width="640" height="1136" />  
        
    <plugin name="InAppBrowser" value="org.apache.cordova.InAppBrowser" />
    <plugin name="InAppBrowser" value="CDVInAppBrowser" />

    <plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
    <plugin name="SplashScreen" value="CDVSplashScreen" />

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true"/>
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser" />
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>
    <feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen" />
    </feature>
    
</widget>